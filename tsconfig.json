
{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "allowJs": false,
    "jsx": "react-native",
    "removeComments": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "plugins": [
      {
        "transform": "typescript-plugin-styled-components",
        "type": "config",
        "minify": true,
      }
    ],
    "moduleResolution": "node",
    "baseUrl": "./",
    "noImplicitAny": false,
    "paths": {
      "@context/*": ["./src/context/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@screens/*": ["./src/screens/*"],
      "@themes/*": ["./src/themes/*"],
      "@components/*": ["./src/components/*"],
      "@assets/*": ["./src/assets/*"],
      "@context": ["./src/context"],
      "@hooks": ["./src/hooks"],
      "@screens": ["./src/screens"],
      "@themes": ["./src/themes"],
      "@components": ["./src/components"],
      "@assets": ["./src/assets"]
    },
    "typeRoots": [ "./src/declarations"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
  ]
}
